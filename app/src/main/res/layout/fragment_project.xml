<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProjectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientbackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/project_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROJECT ONE"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center">
                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/project_one_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textAlignment="center"
                        android:text="Pembuatan Desain Multi Window dan passing data antar activity"
                        android:textColor="@android:color/white"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientbackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/project_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROJECT TWO"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center">
                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/project_two_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textAlignment="center"
                        android:text="Pembuatan Desain dan Pengkodean Alur Program dalam sebuah Aplikasi Mobile"
                        android:textColor="@android:color/white"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientbackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/project_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROJECT THREE"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center">
                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/project_three_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textAlignment="center"
                        android:text="Pembuatan aplikasi dengan menerapkan teknik pengolahan input user"
                        android:textColor="@android:color/white"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientbackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/project_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROJECT FOUR"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center">
                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/project_four_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textAlignment="center"
                        android:text="Pembuatan aplikasi mobile dengan teknik desain aplikasi lanjutan"
                        android:textColor="@android:color/white"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientbackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/project_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROJECT FIVE"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center">
                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/project_five_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textAlignment="center"
                        android:text="Pembuatan aplikasi mobile dengan menerapkan basis data SQLITE"
                        android:textColor="@android:color/white"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</FrameLayout>
