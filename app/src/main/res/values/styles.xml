<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:textSize">25sp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textColor">@color/colorFuncButtonTxt</item>
        <item name="android:background">@drawable/func_button</item>
    </style>

    <style name="NumericButtons">
        <item name="android:textSize">25sp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/num_button</item>
    </style>

</resources>